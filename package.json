{
  "name": "server_ts",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "ts-node data/seed.ts"
  },
  "scripts": {
    "prisma:dev:generate": "npx prisma migrate dev",
    "prisma:dev:deploy": "npx prisma migrate deploy",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:create": "docker compose up dev-db -d",
    "db:dev:restart": "yarn db:dev:rm && sleep 1 && yarn db:dev:create && sleep 1 && yarn prisma:dev:deploy && sleep 1 && yarn data",
    "redis:dev:rm": "docker compose rm dev-redis -s -f -v",
    "redis:dev:create": "docker compose up dev-redis -d",
    "redis:dev:restart": "yarn redis:dev:rm && sleep 1 && yarn redis:dev:create",
    "prisma:test:generate": "npx prisma migrate dev",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "db:test:create": "docker compose up test-db -d",
    "db:test:restart": "yarn db:test:rm && sleep 1 && yarn db:test:create && sleep 1 && yarn prisma:test:deploy && sleep 1 && yarn data",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "yarn build",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "yarn db:test:restart",
    "test:e2e": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
    "data": "npx prisma db seed",
    "reset:db": "prisma migrate reset -f"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.7.1",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.6",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.6",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/microservices": "^9.0.8",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.6",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/terminus": "^9.1.0",
    "argon2": "^0.28.5",
    "cache-manager": "^4.0.1",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cloudinary": "^1.30.0",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.3",
    "ioredis": "^5.2.2",
    "nodemailer": "^6.7.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.6",
    "@prisma/client": "^4.2.0",
    "@types/cache-manager": "^4.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.6",
    "@types/node": "^18.6.2",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.3",
    "pactum": "^3.1.5",
    "prettier": "^2.3.2",
    "prisma": "^4.2.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
